theorem aux {x y : ℝ} (h : x ^ 2 + y ^ 2 = 0) : x = 0 :=
  have h' : x ^ 2 = 0 := by
    apply le_antisymm
    by_contra h'
    apply lt_of_not_ge at h'
    have h0: x^2+y^2 > 0 := by
      calc
        x^2+y^2 ≥ x^2 + 0:= by apply add_le_add; rfl; apply pow_two_nonneg
              _= x^2 := by ring
              _> 0 := by apply h'
    linarith
    apply pow_two_nonneg
  pow_eq_zero h'

example (x y : ℝ) : x ^ 2 + y ^ 2 = 0 ↔ x = 0 ∧ y = 0 := by
  constructor
  intro h
  constructor
  exact aux h
  rw[add_comm] at h
  exact aux h

  intro h
  have ⟨a,b⟩ := h
  rw[a,b]
  norm_num

