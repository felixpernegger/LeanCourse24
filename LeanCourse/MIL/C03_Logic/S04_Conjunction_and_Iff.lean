example : a < b ↔ a ≤ b ∧ a ≠ b := by
  rw [lt_iff_le_not_le]

  constructor
  intro h
  constructor
  exact h.1
  have ⟨h1,h2⟩ := h
  contrapose! h2
  rw[← h2]

  intro h
  constructor
  exact h.1
  have ⟨h1,h2⟩ := h
  contrapose! h2
  apply le_antisymm h1 h2

end

